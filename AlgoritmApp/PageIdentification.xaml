<Page x:Class="AlgoritmApp.PageIdentification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlgoritmApp"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="650"
      Title="PageIdentification">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Margin="0 0 5 0" FontSize="20">Введите логин:</TextBlock>
                <TextBox Name="Login" FontSize="20" Width="250" TextChanged="TextBox_TextChanged"></TextBox>
            </StackPanel>
            <Button  Width="180" FontSize="20" Height="40" Click="Button_Click">Далее</Button>
        </StackPanel>
        <Button FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="35" Margin="25" Name="BtnBack2" Click="BtnBack2_Click" >Назад</Button>
    </Grid>
</Page>
