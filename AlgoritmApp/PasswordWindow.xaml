<Window x:Class="AlgoritmApp.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgoritmApp"
        mc:Ignorable="d"
        Title="Авторизация" Width="300" Height="150" MaxWidth="300" MaxHeight="150" WindowStartupLocation="CenterScreen">
    <Grid >
        <StackPanel Margin="10" Orientation="Vertical">
            <StackPanel>
                <TextBlock FontSize="15">Введите пароль:</TextBlock>
                <PasswordBox Margin="0 10 0 0" MinWidth="250" Name="PasswordBox"></PasswordBox>
            </StackPanel>

            <StackPanel Margin="0 10 0 0" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button IsDefault="True" Click="Button_Click" MinWidth="70">OK</Button>
                <Button IsCancel="True"  MinWidth="70">Отмена </Button>
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Window>
